<div class="container">
  <div class="row">
    <div class="col-1-3">
      <div class="project-form">
        <h2>Log in</h2>
        <ul>
        <%= form_for(:session, url: login_path) do |f| %>

          <li>
            <%= f.label :email %>
            <%= f.text_field :email, placeholder: "Email" %>
          </li>

          <li>
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "Password" %>
          </li>

          <li>
            <%= f.submit "Log in" %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
